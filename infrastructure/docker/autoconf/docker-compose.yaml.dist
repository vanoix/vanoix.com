version: '3.8'

networks:
  backend: ~

services:
  nginx:
    image: nginx:1.19
    volumes:
      - "./infrastructure/docker/nginx/conf.d:/etc/nginx/conf.d:ro"
      - "./public:/var/www/html/public:ro"
    ports:
      - "80"
    networks:
      backend: ~

  node:
    image: node:16-slim
    tty: true
    working_dir: /home/node/app
    volumes:
      - "./:/home/node/app"
    networks:
      backend: ~
